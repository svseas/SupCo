<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="log_view.LogRenderer" owl="1">
        <ol class="timeline-outer reduce-margin">
            <t t-foreach="entries" t-as="letter" t-key="letter.id">
                <li class="timeline-item">
                    <span class="timeline-item-icon | faded-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                            <path fill="none" d="M0 0h24v24H0z" />
                            <path fill="currentColor" d="M12.9 6.858l4.242 4.243L7.242 21H3v-4.243l9.9-9.9zm1.414-1.414l2.121-2.122a1 1 0 0 1 1.414 0l2.829 2.829a1 1 0 0 1 0 1.414l-2.122 2.121-4.242-4.242z" />
                        </svg>
                    </span>
                    <div class="timeline-item-description">
                        <h4>
                            <t t-esc="letter[0]" />
                        </h4>
                    </div>

                </li>
                <li class="timeline-item reduce-margin">
                    <ol class="timeline">
                        <t t-foreach="letter[1]" t-as="l" t-key="l.id">
                            <li class="timeline-item | extra-space">
                                <span class="timeline-item-icon | filled-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24">
                                        <path fill="none" d="M0 0h24v24H0z" />
                                        <path fill="currentColor" d="M6.455 19L2 22.5V4a1 1 0 0 1 1-1h18a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H6.455zM7 10v2h2v-2H7zm4 0v2h2v-2h-2zm4 0v2h2v-2h-2z" />
                                    </svg>
                                </span>
                                <div class="timeline-item-wrapper">
                                    <div class="timeline-item-description">
                                        
                                        <span>
                                            <strong>
                                                <t t-esc="l.reject_by" />
                                            </strong> từ chối phê duyệt <time>
                                            <t t-esc="l.time" />
                                        </time>
                                    </span>
                                </div>
                                <div class="comment">
                                    <strong>GGT <t t-esc="l.id" />
                                    </strong>
                                    <p>
                                        <t t-esc="l.rejection_reason" />
                                    </p>
                                </div>
                            </div>
                        </li>
                    </t>
                </ol>
            </li>

        </t>
    </ol>
</t>
</templates>